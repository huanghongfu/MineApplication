<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:id="@+id/rg_group"
                android:orientation="horizontal"
                android:paddingStart="48dp"
                android:paddingEnd="48dp">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_checked_status"
                    android:button="@null"
                    android:checked="true"
                    android:id="@+id/rb_insurancee_pay"
                    android:gravity="center"
                    android:text="INSURANCEE PAY"
                    android:textColor="@drawable/selector_btn_checked_status_text_color"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_checked_status"
                    android:button="@null"
                    android:id="@+id/rb_self_pay"
                    android:gravity="center"
                    android:text="SELF PAY"
                    android:textColor="@drawable/selector_btn_checked_status_text_color"
                    android:textSize="18sp" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycler_view"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/common_edit_builder"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</layout>
