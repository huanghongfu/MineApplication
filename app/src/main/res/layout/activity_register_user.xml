<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/icon_back_black" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Registration"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack333"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:drawableStart="@drawable/icon_must_input"
                    android:text="Indicates a required field. "
                    android:textColor="#ff000000"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_last_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="LAST NAME" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="FIRST NAME" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_arrow_right"
                        app:common_show_must="true"
                        app:common_title_hint="GENDER" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_calendar"
                        app:common_show_must="true"
                        app:common_title_hint="DOB" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_middle_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="false"
                        app:common_title_hint="MIDDLE NAME" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_arrow_right"
                        app:common_show_must="false"
                        app:common_title_hint="TITLE" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_ssn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="false"
                        app:common_title_hint="SSN" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_marital_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_arrow_right"
                        app:common_show_must="false"
                        app:common_title_hint="MARITAL STATUS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="ADDRESS" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="CITY" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_arrow_right"
                        app:common_show_must="true"
                        app:common_title_hint="STATE" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_zip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="ZIP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="false"
                        app:common_title_hint="EMAIL" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="true"
                        app:common_title_hint="PHONE" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_top_margin"
                    android:orientation="horizontal">

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_race"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="false"
                        app:common_right_icon="@drawable/icon_arrow_right"
                        app:common_show_must="false"
                        app:common_title_hint="RACE" />

                    <com.hhf.project.widght.CommonTableView
                        android:id="@+id/common_view_employer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:common_editable="true"
                        app:common_show_must="false"
                        app:common_title_hint="EMPLOYER" />
                </LinearLayout>

                <fragment
                    android:id="@+id/fragment_container"
                    android:name="com.hhf.project.ui.EditHolderFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="fragmentTag" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#5368FF"
            android:gravity="center"
            android:text="CHECK IN"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </LinearLayout>


</layout>
