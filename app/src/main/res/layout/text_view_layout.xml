<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:id="@+id/ll_left_container"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_must_image"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_must_input"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_title"
            android:layout_marginStart="3dp"
            android:layout_height="50dp"
            android:text="LAST NAME"
            android:gravity="right|center"
            android:textColor="#ff000000"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="34dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/ll_content_container"
            android:background="@drawable/common_selector_rect_bg"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="0dp"
                android:id="@+id/text_view"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:gravity="center_vertical"
                android:layout_height="34dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edit_text"
                android:singleLine="true"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:visibility="gone"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_height="34dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="11dp"
                android:id="@+id/iv_right_image"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_right_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:background="@drawable/common_selector_rect_bg"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/tv_right_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="11dp"
                android:id="@+id/iv_right_content_image"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_arrow_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>